@using Ogdi.InteractiveSdk.Mvc

@inherits Ogdi.InteractiveSdk.Mvc.OgdiViewPage<Ogdi.InteractiveSdk.Mvc.Models.Request.Request>



<script type="text/javascript">

    function showCaptcha() {
      Recaptcha.create('<%=Ogdi.Azure.Configuration.OgdiConfiguration.GetValue("RecaptchaPublicKey")%>', 'eidCommentsRecaptcha', RecaptchaOptions);
    }

    $().ready(function() {
        showCaptcha();
    });


</script>

<div class="block form">
	<div class="bar"> @RequestResources.New.NewRequest  </div>
    @Html.ValidationSummary(RequestResources.New.CreateWasUnsuccessful)

    @using (Html.BeginForm()) {
    <table class="form" cellpadding="5" cellspacing="0" border="0">		
		<tr class="field">
			<td class="label"> @RequestResources.New.Name  </td>
			<td class="value"> @Html.TextBox("Name")
                @Html.ValidationMessage("Name", "*")</div>
			<td class="clear"></td>
		</tr>				
		<tr class="field">
			<td class="label"> @RequestResources.New.Email  </div>
			<td class="value"> @Html.TextBox("Email") @RequestResources.New.WillNotBePublished 
                @Html.ValidationMessage("Email", "*")</td>
			<td class="clear"></td>
		</tr>						
		<tr class="field">
			<td class="label">@RequestResources.New.Subject  </div>
			<td class="value"> @Html.TextBox("Subject")
                @Html.ValidationMessage("Subject", "*")</td>
			<td class="clear"></td>
		</tr>
		<tr class="field">
			<td class="label"> @RequestResources.New.Description </td>
			<td class="value">@Html.TextArea("Description", "", 10, 40, null)
                @Html.ValidationMessage("Description", "*")</td>
			<td class="clear"></td>
		</tr>
		
	    <tr class="field">
		    <td class="label"> @RequestResources.New.EnterText </td>
		    <td class="value">
			    <div id="eidCommentsRecaptcha"></div>
			    @Html.ValidationMessage("eidCommentsRecaptcha", "Words mismatch")</td>
		    </td>
	    </tr>
		
		<tr class="buttons">
		    <td></td>	
		    <td>
		    <input id = "RecaptchaChallenge" type="hidden" />
		    <input id = "RecaptchaResponse" type="hidden" />
			    @Html.Raw(Html.NiceInputButton(this, SharedResources.Buttons.Create, ""))
	        </td>
		</tr>
		 
		</table>
     } 
    
    
	</div>
	<div class="clear"></div>
	
</div>






